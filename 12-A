        z-index: 1000;
    }

    nav ul.active {
        display: flex;
    }

    .menu-toggle {
        display: block;
    }

    .menu-toggle .open-menu {
        display: block;
    }

    .menu-toggle .close-menu {
        display: none;
    }

    nav ul.active ~ .menu-toggle .open-menu {
        display: none;
    }

    nav ul.active ~ .menu-toggle .close-menu {
        display: block;
    }

    .services .container {
        flex-direction: column;
        align-items: center;
    }

    .service {
        width: 80%;
    }
}

